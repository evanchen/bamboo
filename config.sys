
#系统配置文件,以'#'开始为注释
#配置格式是每行一对'key = value'

#日志等级
log_level = 0

#平台名称
pf_name = "无名"

#服务器id
host_id = 1001

#master进程相关,服务器只有一个master进程,master进程不会主动连接game进程端口
master_ip = 0.0.0.0
master_port = 3099

#game进程相关(可以加任意多个game进程信息,但数量必须小于等于 max_game_num)
#game进程启动完毕,主动连接master进程,进程编号按启动脚本传递
#以下是每个进程的rpc监听端口
game_0_port = 3100
game_1_port = 3101
game_2_port = 3102
game_3_port = 3103

#最大game进程数量
max_game_num = 3

